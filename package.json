{
  "name": "deployment-management",
  "version": "1.0.0",
  "description": "This repo contains the code for a basic deployment-management",
  "main": "index.js",
  "dependencies": {
    "ajv": "^8.12.0",
    "amqplib": "^0.10.3",
    "class-validator": "^0.14.0",
    "concurrently": "^8.2.0",
    "faker": "^6.6.6",
    "jsonwebtoken": "^9.0.1",
    "knex": "^2.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^4.0.4",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.3.0",
    "koa2-cors": "^2.0.5",
    "pg": "^8.11.1",
    "save": "^2.9.0",
    "shortid": "^2.2.16",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/amqplib": "^0.10.1",
    "@types/jest": "^23.3.14",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/koa2-cors": "^2.0.1",
    "@types/node": "^10.14.12",
    "@types/redis": "^2.8.13",
    "@types/shortid": "0.0.29",
    "@types/sinon": "^10.0.15",
    "@types/supertest": "^2.0.8",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "prettier": "1.15.1",
    "pretty-quick": "^1.11.1",
    "sinon": "^15.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "scripts": {
    "build": "tsc --build",
    "start:projects": "ts-node-dev src/servers/projects-server.ts",
    "start:data-aggregation": "ts-node-dev src/servers/aggregation-server.ts ",
    "start": "concurrently \"npm run start:projects\" \"npm run start:data-aggregation\"",
    "test": "SET NODE_ENV=test & SET PORT=7788 & jest",
    "test:watch": "npm run test -- --watchAll",
    "knex": "./node_modules/.bin/knex --knexfile src/database/knexfile.ts"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/__tests__/Stubs.ts"
    ],
    "roots": [
      "<rootDir>/__tests__/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "author": "Umberto Sgueglia",
  "license": "ISC"
}
